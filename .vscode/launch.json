    "version": "0.2.0",
    "configurations": [

        {
         "name": "Django Runserver",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",   // 指定 manage.py
            "args": [
                "runserver", "8000"                     // 等同於 python manage.py runserver 8000
            ],
            "django": true,                             // 告訴 debugpy 這是 Django 專案
            "console": "integratedTerminal",
            "preLaunchTask": "open-browser"         // 在 VS Code 內建終端機執行
        }
    ]
}